<?xml version = "1.0" encoding = "utf-8"?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x= "http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit = "http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class = " MaliyetApp.Libs.AppSettings.LoadingPopup"  VerticalOptions="Center" HorizontalOptions="Center" CanBeDismissedByTappingOutsideOfPopup="False">

    <StackLayout BackgroundColor = "#80000000"
                          WidthRequest="400" HeightRequest="200"
                         >
        <ActivityIndicator IsRunning = "True" Color = "Blue"    VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        <Label Text = "Yükleniyor..."
                   TextColor = "Black"
                   FontSize = "18"
                     VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
        <Label Text = "Bu işlem uzun sürebilir, lütfen bekleyin !!"
           TextColor = "Black"
           FontSize = "18"
             VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
        <Label Text = "İşlem Bittiğinde Tamamlanma Uyarısı Çıkacak "
         TextColor = "Red" FontAttributes="Bold"
         FontSize = "18"
       VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
    </toolkit:Popup>
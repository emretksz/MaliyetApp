<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MaliyetApp.Views.Actions.DeletePopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               HorizontalOptions="Center"
               VerticalOptions="Center">
    <toolkit:Popup.Size>
        <Size Width="400" Height="400" />
    </toolkit:Popup.Size>
    <ScrollView >
        <VerticalStackLayout Padding="15" Spacing="15" BackgroundColor="White"  >
           
            <!-- Popup Başlık -->
            <Label Text="Silme İşlemi"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="CenterAndExpand"
               TextColor="Black" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Sil" BackgroundColor="#4CAF50" TextColor="White"  Clicked="Sil" />
                <Button Text="İptal" BackgroundColor="#F44336" TextColor="White" Clicked="Iptal"  />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</toolkit:Popup>